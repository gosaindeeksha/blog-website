<%- include("partials/header.ejs") %>
<h1>EDIT</h1>
<form action="/edited" method="POST">
    <div class="form-group">
      <label for="postTile">Title</label>
      <input type="text" class="form-control" name="postTitle" value="<%= title %>" placeholder="Enter Title" autofocus required>
    </div>

    <div class="form-group">
      <label for="postContent">Post</label>
      <textarea class="form-control" name="postContent" rows="3" placeholder="Enter Content" autofocus required>
        <%= content %>

      </textarea>
    </div>

    <button type="submit" class="btn btn-dark">DONE</button>
  </form>
<div contenteditable="true">
   
</div>
<%-include("partials/footer.ejs")  %>